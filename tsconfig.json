{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // Recommended for all projects
    "noUnusedLocals": true, // Helps catch dead code
    "noUnusedParameters": true, // Helps find unused function arguments
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": true // Modern replacement for importsNotUsedAsValues
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
